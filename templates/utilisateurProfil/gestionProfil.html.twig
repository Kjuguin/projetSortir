{% extends 'pages-base.html.twig' %}

{% block title %}Modifier profil{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="msg-alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="edit-profil-bloc">
        {{ form_start(userForm, {'attr': {'class': 'profil-form'}}) }}

        <!-- bloc photo + buttons -->
        <div class="bloc-profil-left">
            <div class="left-container">

                <div class="avtr-prfl-edit">
                    <img src="{{ asset(app.user.urlPhoto) }}">
                </div>

{#                <button class="btn-base btn-blue btn-pfl"><a href="{{ path('utilisateur_modifierPhoto') }} ">Upload photo</a></button>#}
                <button class="btn-base btn-blue btn-pfl" type="button" id="btnPhoto">Upload photo</button>

                <div class="red-action-btn">
                    <button class="btn-base btn-red btn-pfl" type="reset">Annuler</button>
                    <div class="clear"></div>
                    <button class="btn-base btn-red btn-cncl-pfl btn-pfl" type="submit">Enregistrer</button>
                </div>
            </div>
        </div>

        <!-- bloc title + fields -->
        <div class="bloc-profil-right">
            <h1 class="page-h1">Mon Profil</h1>

            <div class="avtr-edit-mini">
                <img src="{{ asset(app.user.urlPhoto) }}">
            </div>

            {{ form_widget(userForm) }}

            <div class="gp-btn-pfl-mini">
                <button class="btn-base btn-blue btn-pfl-mini">Upload photo</button>
                <div class="clear"></div>
                <button class="btn-base btn-red btn-pfl-mini mini-cncl" type="reset">Annuler</button>
                <div class="clear"></div>
                <button class="btn-base btn-red btn-pfl-mini" id="enregistrerModifsProfil" type="submit">Enregistrer</button>

            </div>
        </div>

        {{ form_end(userForm) }}
    </div>

    <!-- Popup Upload Photo -->
    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="register-container">
            <span class="close">&times;</span>

            <h1 class="page-h1">Modifier photo de profil</h1>

            {{ form_start(avatarForm) }}
            {{ form_widget(avatarForm) }}

            <button type="submit" id="submit" name="submit" class="btn-base btn-red btn-photo">Confirmer</button>

            {{ form_end(avatarForm) }}
        </div>

    </div>


{% endblock %}
